
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-container">
    <div class="xs-pd-20-10 pd-ltr-20">
        <div class="title pb-20">
            <h2 class="h3 mb-0">@ViewBag.Title</h2>
        </div>

        <div class="row pb-10">
            <div class="col-xl-3 col-lg-3 col-md-6 mb-20">
                <div class="card-box height-100-p widget-style3">
                    <div class="d-flex flex-wrap">
                        <div class="widget-data">
                            <div class="weight-700 font-24 text-dark">@ViewBag.Soluongsach</div>
                            <div class="font-14 text-secondary weight-500">Sách</div>
                        </div>
                        <div class="widget-icon">
                            <div class="icon" data-color="#00eccf"><i class="icon-copy dw dw-calendar1"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 mb-20">
                <div class="card-box height-100-p widget-style3">
                    <div class="d-flex flex-wrap">
                        <div class="widget-data">
                            <div class="weight-700 font-24 text-dark">@ViewBag.Soluongbandoc</div>
                            <div class="font-14 text-secondary weight-500">Bạn đọc</div>
                        </div>
                        <div class="widget-icon">
                            <div class="icon" data-color="#ff5b5b"><span class="icon-copy ti-heart"></span></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 mb-20">
                <div class="card-box height-100-p widget-style3">
                    <div class="d-flex flex-wrap">
                        <div class="widget-data">
                            <div class="weight-700 font-24 text-dark">@ViewBag.Soluongbaidangthang</div>
                            <div class="font-14 text-secondary weight-500">Bài đăng trong tháng</div>
                        </div>
                        <div class="widget-icon">
                            <div class="icon"><i class="icon-copy fa fa-stethoscope" aria-hidden="true"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 mb-20">
                <div class="card-box height-100-p widget-style3">
                    <div class="d-flex flex-wrap">
                        <div class="widget-data">
                            <div class="weight-700 font-24 text-dark">@ViewBag.Soluongquahan</div>
                            <div class="font-14 text-secondary weight-500">Lượt quá hạn</div>
                        </div>
                        <div class="widget-icon">
                            <div class="icon" data-color="#09cc06"><i class="icon-copy fa fa-money" aria-hidden="true"></i></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row pb-10">
            <div class="col-md-12 mb-20">
                <div class="card-box height-100-p pd-20">
                    <div class="d-flex flex-wrap justify-content-between align-items-center pb-0 pb-md-3">
                        <div class="h5 mb-md-0">Thống kê mượn trả</div>
                        <div class="form-group mb-md-0">
                            <select class="form-control form-control-sm selectpicker">
                                <option value="2020">Năm 2020</option>
                                <option value="2021" selected>Năm 2021</option>
                                <option value="2022">Năm 2022</option>
                                <option value="2023">Năm 2023</option>
                            </select>
                        </div>
                    </div>
                    <div id="activities-chart"></div>
                </div>
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-20">
                <div class="card-box height-100-p pd-20 min-height-200px">
                    <div class="d-flex justify-content-between pb-10">
                        <div class="h5 mb-0">Vừa truy cập</div>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" data-color="#1b3133" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item" href="#"><i class="dw dw-eye"></i> Xem chi tiêt</a>
                            </div>
                        </div>
                    </div>
                    <div class="user-list">
                        <ul>
                            <li class="d-flex align-items-center justify-content-between">
                                <div class="name-avatar d-flex align-items-center pr-2">
                                    <div class="avatar mr-2 flex-shrink-0">
                                        <img src="~/Content/AdminContent/vendors/images/photo1.jpg" class="border-radius-100 box-shadow" width="50" height="50" alt="">
                                    </div>
                                    <div class="txt">
                                        
                                        <div class="font-14 weight-600">Dr. Neil Wagner</div>
                                        <div class="font-12 weight-500" data-color="#b2b1b6">Pediatrician</div>
                                    </div>
                                </div>
                                <div class="cta flex-shrink-0">
                                    <a href="#" class="btn btn-sm btn-outline-primary">Thông tin</a>
                                </div>
                            </li>
                            <li class="d-flex align-items-center justify-content-between">
                                <div class="name-avatar d-flex align-items-center pr-2">
                                    <div class="avatar mr-2 flex-shrink-0">
                                        <img src="~/Content/AdminContent/vendors/images/photo2.jpg" class="border-radius-100 box-shadow" width="50" height="50" alt="">
                                    </div>
                                    <div class="txt">
                                        
                                        <div class="font-14 weight-600">Dr. Ren Delan</div>
                                        <div class="font-12 weight-500" data-color="#b2b1b6">Pediatrician</div>
                                    </div>
                                </div>
                                <div class="cta flex-shrink-0">
                                    <a href="#" class="btn btn-sm btn-outline-primary">Thông tin</a>
                                </div>
                            </li>
                            <li class="d-flex align-items-center justify-content-between">
                                <div class="name-avatar d-flex align-items-center pr-2">
                                    <div class="avatar mr-2 flex-shrink-0">
                                        <img src="~/Content/AdminContent/vendors/images/photo3.jpg" class="border-radius-100 box-shadow" width="50" height="50" alt="">
                                    </div>
                                    <div class="txt">
                                        
                                        <div class="font-14 weight-600">Dr. Garrett Kincy</div>
                                        <div class="font-12 weight-500" data-color="#b2b1b6">Pediatrician</div>
                                    </div>
                                </div>
                                <div class="cta flex-shrink-0">
                                    <a href="#" class="btn btn-sm btn-outline-primary">Thông tin</a>
                                </div>
                            </li>
                            <li class="d-flex align-items-center justify-content-between">
                                <div class="name-avatar d-flex align-items-center pr-2">
                                    <div class="avatar mr-2 flex-shrink-0">
                                        <img src="~/Content/AdminContent/vendors/images/photo4.jpg" class="border-radius-100 box-shadow" width="50" height="50" alt="">
                                    </div>
                                    <div class="txt">
                                        
                                        <div class="font-14 weight-600">Dr. Callie Reed</div>
                                        <div class="font-12 weight-500" data-color="#b2b1b6">Pediatrician</div>
                                    </div>
                                </div>
                                <div class="cta flex-shrink-0">
                                    <a href="#" class="btn btn-sm btn-outline-primary">Thông tin</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-20">
                <div class="card-box height-100-p pd-20 min-height-200px">
                    <div class="d-flex justify-content-between">
                        <div class="h5 mb-0">Thống kê sách</div>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" data-color="#1b3133" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item" href="#"><i class="dw dw-eye"></i>Chi tiêt</a>
                            </div>
                        </div>
                    </div>
                    <div id="diseases-chart"></div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 mb-20">
                <div class="col-md-12 mb-20">
                    <div class="card-box min-height-200px pd-20 mb-20" data-bgcolor="#455a64">
                        <div class="d-flex justify-content-between pb-20 text-white">
                            <div class="icon h1 text-white">
                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                <!-- <i class="icon-copy fa fa-stethoscope" aria-hidden="true"></i> -->
                            </div>
                            <div class="font-14 text-right">
                                <div><i class="icon-copy ion-arrow-up-c"></i> 2.69%</div>
                                <div class="font-12">Từ tháng trước</div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-end">
                            <div class="text-white">
                                <div class="font-14">Lượt mượn trả</div>
                                <div class="font-24 weight-500">1865</div>
                            </div>
                            <div class="max-width-150">
                                <div id="appointment-chart"></div>
                            </div>
                        </div>
                    </div>
                    <div class="card-box min-height-200px pd-20" data-bgcolor="#265ed7">
                        <div class="d-flex justify-content-between pb-20 text-white">
                            <div class="icon h1 text-white">
                                <i class="fa fa-stethoscope" aria-hidden="true"></i>
                            </div>
                            <div class="font-14 text-right">
                                <div><i class="icon-copy ion-arrow-down-c"></i> 3.69%</div>
                                <div class="font-12">Từ tháng trước</div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-end">
                            <div class="text-white">
                                <div class="font-14">Số lượng bạn đọc</div>
                                <div class="font-24 weight-500">250</div>
                            </div>
                            <div class="max-width-150">
                                <div id="surgery-chart"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-box pb-10">
            <div class="h5 pd-20 mb-0">Sách đọc nhiều</div>
            <table class="data-table table nowrap">
                <thead>
                    <tr>
                        <th class="table-plus">STT</th>
                        <th>Mã sách</th>
                        <th>Tên sách</th>
                        <th>Tác giả</th>
                        <th>Hình ảnh sách</th>
                        <th class="datatable-nosort">Công cụ</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int STT = 0;}
                    @foreach (var item in @ViewBag.Sach as List<WebThuvien.Models.Entity.SACH>)
                    {
                        STT = STT + 1;
                        <tr>
                            <td class="table-plus">
                                @STT
                            </td>
                            <td>@item.MASACH</td>
                            <td>@item.TENSACH</td>
                            <td>@item.TACGIA.TENTACGIA</td>
                            <td>
                                <div class="name-avatar d-flex align-items-center">
                                    <div class="avatar mr-2 flex-shrink-0">
                                        <img src="~/Content/ClientContent/images/Books/@item.HINHANH" class="border-radius-100 shadow" width="60" height="60" alt="hình ảnh">
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="table-actions">
                                    <a href="/Admin/XemChiTietSach?MaSach=@item.MASACH" data-color="#265ed7"><i class="icon-copy dw dw-edit2"></i></a>
                                    <a href="/Admin/Xoasach?MaSach=@item.MASACH" data-color="#e95959"><i class="icon-copy dw dw-delete-3"></i></a>
                                </div>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>

        <div class="footer-wrap pd-20 mb-20 card-box">
            Thư viện số hóa - <a href="/" target="_blank">Ban cơ yếu chính phủ</a>
        </div>
    </div>
</div>