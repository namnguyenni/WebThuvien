@{
    Layout = null;
} 


  <!-- Start: Slider Section -->
<div data-ride="carousel" class="carousel slide" id="home-v1-header-carousel">
    <!-- Carousel slides -->
    <div class="carousel-inner">
        @{ int i = 0; }
        @foreach (var item in ViewBag.Sach as List<WebThuvien.Models.Entity.SACH>)
        {
            i = i+1;
            if (i == 1)
            {
                <div class="item active">
                    <figure style="min-height:700px; max-height:750px;">
                        <img  class="slider-image" alt="Home Slide" src="~/Content/ClientContent/images/Books/@item.HINHANH" />
                    </figure>
                    <div class="container">
                        <div class="carousel-caption">
                            <h3>Thế giới thư viện sách , khám phá ngay!</h3>
                            <h2>@item.TENSACH</h2>
                            <p>Thư viện sách Online, cung cấp đến bạn những trải nghiệm tốt nhất , những cuốn sách tâm đắc nhất được tuyển chọn kĩ càng</p>
                            <div class="slide-buttons hidden-sm hidden-xs">
                                <a href="/sach/chitietsach?masach=@item.MASACH" class="btn btn-primary">Xem thêm</a>

                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="item">
                    <figure style="min-height:700px; max-height:750px;">
                        <img class="slider-image" alt="Home Slide" src="~/Content/ClientContent/images/Books/@item.HINHANH" />
                    </figure>
                    <div class="container">
                        <div class="carousel-caption">
                            <h3>Tri thức bất tận, cùng nâng cao năng lực bản thân nào!</h3>
                            <h2>@item.TENSACH</h2>
                            <p>@item.GHICHU</p>
                            <div class="slide-buttons hidden-sm hidden-xs">
                                <a href="/sach/chitietsach?masach=@item.MASACH" class="btn btn-primary">Xem thêm</a>

                            </div>
                        </div>
                    </div>
                </div>
            }

        }

    </div>
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#home-v1-header-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#home-v1-header-carousel" data-slide-to="1"></li>
        <li data-target="#home-v1-header-carousel" data-slide-to="2"></li>
    </ol>
</div>
<!-- End: Slider Section -->
