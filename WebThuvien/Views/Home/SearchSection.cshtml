@{
    Layout = null;
}
    <!-- Start: Search Section -->
<section class="search-filters">
    <div class="container">
        <div class="filter-box">
            <h3>Tìm cuốn sách bạn yêu thích?</h3>
            <form action="http://libraria.demo.presstigers.com/index.html" method="get">
                <div class="col-md-4 col-sm-6">
                    <div class="form-group">
                        <label class="sr-only" for="keywords">Tìm kiếm bằng từ khóa</label>
                        <input class="form-control" placeholder="Nhập từ khóa tìm kiếm" id="keywords" name="keywords" type="text">
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <select name="catalog" id="catalog" class="form-control">
                            <option>Tất cả loại sách</option>
                            <option>Loại sách 01</option>
                            <option>Loại sách 02</option>
                            <option>Loại sách 03</option>
                            <option>Loại sách 04</option>
                            <option>Loại sách 05</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <select name="category" id="category" class="form-control">
                            <option>Tất cả lĩnh vực</option>
                            <option>Lĩnh vực 01</option>
                            <option>Lĩnh vực 02</option>
                            <option>Lĩnh vực 03</option>
                            <option>Lĩnh vực 04</option>
                            <option>Lĩnh vực 05</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6">
                    <div class="form-group">
                        <input class="form-control" type="submit" value="Tìm kiếm">
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- End: Search Section -->
