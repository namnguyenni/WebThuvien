@{
    Layout = null;
}    <!-- Start: Features -->
<section class="features">
    <div class="container">
        <ul>
            @{ var index = 1;}
            @foreach (var item in ViewBag.Loaisach)
            {
                if (index % 2 == 0)
                {
                    <li class="light-green-hover">
                        <div class="feature-box">
                            <i class="@item.KIHIEU"></i>
                            <h3>@item.TENTHELOAI</h3>
                            <p>@item.GHICHU.</p>

                            <a class="light-green" href="/Sach/Search?TheLoaiSach">
                                Xem chi tiết <i class="fa fa-long-arrow-right"></i>
                            </a>
                        </div>
                    </li>
                }

                else
                {
                    <li class="green-hover">
                        <div class="feature-box">
                            <i class="@item.KIHIEU"></i>
                            <h3>@item.TENTHELOAI</h3>
                            <p>@item.GHICHU.</p>
                            <a class="green" href="/Sach/Search?TheLoaiSach">
                                Xem chi tiết <i class="fa fa-long-arrow-right"></i>
                            </a>
                        </div>
                    </li>
                }

                index++;
            }
            
        </ul>
    </div>
</section>
<!-- End: Features -->
